# Hotel CCTV Monitoring System - Environment Variables
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite by default, can change to PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# Admin Account (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@hotel.com
ADMIN_PASSWORD=admin123

# Detection Model Filenames (relative to models/ directory)
YOLO_MODEL=yolov8s.pt
POSE_MODEL=yolov8s-pose.pt
FIRE_MODEL=fire_smoke_yolov8.pt

# Default Detection Confidence Thresholds (can be overridden per camera)
CASH_DETECTION_CONFIDENCE=0.5
VIOLENCE_DETECTION_CONFIDENCE=0.6
FIRE_DETECTION_CONFIDENCE=0.5

# Video Recording Settings
OUTPUT_DIR=output
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=1024

# RTSP Settings
RTSP_TIMEOUT=10
RTSP_BUFFER_SIZE=10

# Language Settings (ko or en)
DEFAULT_LANGUAGE=ko
